<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gatherman.DataAccess.DBAccess"
             xmlns:ui="clr-namespace:Vapolia.Lib.Ui;assembly=XamarinFormsGesture"
             Visual="Material"
             Title="Commerçants"
             >
    
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Commerçants"
                   HorizontalOptions="StartAndExpand"
                   VerticalOptions="CenterAndExpand"
                   TextColor="{DynamicResource SecondaryTextColor}"
               />
            <Button Text="Add" Clicked="OnAdd"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
            <Button Text="+" WidthRequest="56" HeightRequest="56" BorderRadius="28"  HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand"
                    AbsoluteLayout.LayoutBounds="1,1, 100, 100"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                    Margin="16"
                    
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    />
        <StackLayout>
            <ListView x:Name="lstVMerchant"
                      IsPullToRefreshEnabled="True"
                      ui:Gesture.SwipeLeftCommand="{Binding SwipeLeftCommand}"
                      IsEnabled="True"
                      InputTransparent="False">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <StackLayout Orientation="Horizontal">
                                <Label Text ="{Binding FullName}" />
                                <Button Text="Edit" 
                                    CommandParameter="{Binding .}"
                                    Clicked="OnEdit"
                                    />
                                <Button Text="Delete" 
                                    CommandParameter="{Binding .}"
                                    Clicked="OnDelete"
                                    />
                            </StackLayout>
                        </ViewCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>